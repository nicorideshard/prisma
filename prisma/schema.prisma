model Libro {
  id        Int      @id @default(autoincrement())
  codigo    String
  numeroPaginas Int
  totalLibros Int
  prestamoDigital Boolean
  cliente   Cliente?
  coste     Float?
  autor     Autor?
}

model Cliente {
  id       Int    @id @default(autoincrement())
  nombre   String
  libros   Libro[]
}

model Autor {
  id      Int    @id @default(autoincrement())
  nombre  String
  libros  Libro[]
}
model Prestamo {
  id        Int      @id @default(autoincrement())
  fechaInicio  DateTime
  fechaFin  DateTime
  libro     Libro   @relation(fields: [libroId], references: [id])
  libroId   Int
  cliente   Cliente @relation(fields: [clienteId], references: [id])
  clienteId Int
}